<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="paperformat_check_usa" model="report.paperformat">
            <field name="name">USA Check Letter</field>
            <field name="default" eval="False" />
            <field name="format">Letter</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <record id="action_print_check_USA" model="ir.actions.report">
            <field name="name">Print Check USA</field>
            <field name="model">account.payment</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">USA_check_template.print_check_usa</field>
            <field name="report_file">USA_check_template.print_check_usa</field>
            <field name="print_report_name">'Check USA - %s' % (object.partner_id.name or '',)</field>
            <field name="paperformat_id" ref="USA_check_template.paperformat_check_usa"/>
            <field name="attachment">'check_'+(object.partner_id and object.partner_id.name or 'Internal')+'_'+(object.name)+'_USA.pdf'</field>
            <field name="attachment_use">True</field>
        </record>

    </data>
</odoo>

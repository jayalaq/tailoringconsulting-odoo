<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cesion_invoice_form" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="name">account.move.cesion.form</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <notebook>
                <page string="Document Cession" name="cesion_invoice" 
                    invisible="l10n_cl_dte_status not in ('accepted')">
                    <header>
                        <button string="Create Cession" type="object" name="validate_cesion"/>
                    </header>
                    <group>
                        <field name='cession_partner_id'/>
                        <field name='cession_number'/>
                        <field name='sworn_declaration'/>
                        <field name='l10n_cl_aec_file'/>
                        <field name='sii_xml_dte' invisible="True"/>
                        <field name='sii_cesion_message' readonly="True" invisible="True"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
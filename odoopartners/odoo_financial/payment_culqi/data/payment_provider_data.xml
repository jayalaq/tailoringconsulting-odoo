<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="payment_provider_culqi" model="payment.provider">
        <field name="name">Culqi</field>
        <field name="code">culqi</field>
        <field name="image_128" type="base64" file="payment_culqi/static/src/img/culqi_icon.png"/>
        <field name="payment_method_ids"
               eval="[Command.set([
                         ref('payment.payment_method_card'),
                         ref('payment.payment_method_visa'),
                         ref('payment.payment_method_mastercard'),
                         ref('payment.payment_method_amex'),
                         ref('payment.payment_method_diners'),
                     ])]"
        />
        <field name="available_country_ids"
               eval="[Command.set([
                         ref('base.pe'),
                     ])]"
        />
        <field name="available_currency_ids"
               eval="[Command.set([
                         ref('base.PEN'),
                         ref('base.USD'),
                     ])]"
        />
        <field name="redirect_form_view_id" ref="redirect_form"/>
        <field name="pre_msg"><![CDATA[<p>Se mostrará una ventana modal de CULQI después de hacer clic en el botón de pago.</p>]]>
        </field>
    </record>

</odoo>

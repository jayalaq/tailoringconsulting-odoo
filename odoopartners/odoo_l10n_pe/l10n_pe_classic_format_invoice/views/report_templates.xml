<?xml version="1.0" encoding="utf-8"?>
<odoo>
       <!-- Change Format Invoices-->
        <template id="web_view_template_inherit_l10n_pe_classic_format_invoice" inherit_id="web.external_layout_standard">
            <xpath expr="//div[@name='company_address']" position="replace">
                <t t-if="company">
                    <div class="col-8" name="company_address" style="font-size:17px;">
                        <t t-if="company.partner_id.name" t-esc="company.partner_id.name.upper()"/><br/>
                        <t t-if="company.partner_id.street" name="company_id_street" t-esc="company.partner_id.street.upper()"/><br/>
                        <t t-if="company.partner_id and company.partner_id.l10n_pe_district and company.partner_id.l10n_pe_district.name" t-esc="company.partner_id.l10n_pe_district.name.upper()"/>,
                        <t t-if="company.partner_id.city" t-esc="company.partner_id.city.upper()"/>,
                        <t t-if="company.partner_id.state_id and company.partner_id.state_id.name" t-esc="company.partner_id.state_id.name.upper()"/>,
                        <t t-if="company.partner_id.country_id and company.partner_id.country_id.name" t-esc="company.partner_id.country_id.name.upper()"/><br/>
                        <t t-if="company.partner_id and company.partner_id.vat and company.partner_id.l10n_latam_identification_type_id" t-esc="company.partner_id.l10n_latam_identification_type_id.name.upper() + ': ' + company.partner_id.vat"/>
                    </div>
                </t>
                <t t-else="">
                    <div class="col-8" name="company_address">
                        <span t-if="company.company_details" t-field="company.company_details"/>
                    </div>
                </t>
            </xpath>
        </template>

</odoo>
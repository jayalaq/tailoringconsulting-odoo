<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_stock_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.stock</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='production_lot_info']" position="inside">
                <setting invisible="not group_stock_production_lot">
                    <field name="is_lot_on_delivery_slip"/>
                </setting>
                
                <setting invisible="not group_stock_production_lot">
                    <field name="is_lot_expiry_date"/>
                </setting>
                
                <setting invisible="not group_stock_production_lot">
                    <field name="is_product_barcode"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
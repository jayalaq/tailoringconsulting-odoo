        <xpath expr="//div[hasclass('top-content')]/div[hasclass('back')]" position="before">
            <div class="button border-bottom highlight btn btn-lg ms-2 btn-secondary ruc_validation" t-if="state.detailIsShown" t-on-click="triggerValidation">
                <t t-if="ui.isSmalll" class="fa fa-address-card"></t>
                <t t-else="">
                    <span> RUC</span>
                </t>
            </div>
        </xpath>
    </t>
</templates>

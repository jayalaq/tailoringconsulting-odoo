<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_invoice_document_tickets_inherit_session_info" inherit_id="pos_ticket_format_invoice.report_invoice_document_tickets">
            <xpath expr="//table[hasclass('table-pos-receipt-vendor')]/tbody/tr[2]" position="after">
                <t t-set="pos_orders" t-value="o.sudo().pos_order_ids"/>
                <tr>
                    <td>
                        <strong>Tienda</strong>
                    </td>
                    <td>:</td>
                    <td>
                        <t t-if="pos_orders">
                            <t t-esc="pos_orders[0].session_id.config_id.name"/>
                        </t>
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Empleado</strong>
                    </td>
                    <td>:</td>
                    <td>
                        <t t-if="pos_orders">
                            <t t-esc="pos_orders[0].employee_id.name "/>
                        </t>
                    </td>
                </tr>
            </xpath>

            <xpath expr="//div[hasclass('pos-receipt-print-ticket')]/div[hasclass('total_write')]" position="after">
                <t t-set="payment_method_value" t-value="false"/>
                <t t-if="pos_orders">
                    <t t-foreach="pos_orders[0].payment_ids" t-as="payment">
                        <t t-if="payment">
<!--                            <t t-if="payment.amount &gt; 0">-->
                                <t t-set="payment_method_value" t-value="true"/>
<!--                            </t>-->
                        </t>
                    </t>
                </t>

                <table t-attf-class="table-session-payment-method#{'' if payment_method_value else '-inv'}" style="border-color: #fff;">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody style="font-size: 10px;">
                        <t t-if="pos_orders">
                            <t t-set="order" t-value="pos_orders[0]"/>
                            <t t-set="total_change" t-value="sum(payment.amount for payment in order.payment_ids if payment.amount &lt; 0)"/>
                            
                            <t t-foreach="order.payment_ids.filtered(lambda p: p.amount > 0)" t-as="line_payment">
                                <tr>
                                    <td>
                                        <strong>
                                            <span t-field="line_payment.payment_method_id.name"/>
                                        </strong>
                                    </td>
                                    <td align="right">
                                        <span t-esc="'S/ ' + '{0:.2f}'.format(abs(line_payment.amount))"/>
                                    </td>
                                </tr>
                            </t>
                            
                            <t t-if="total_change &lt; 0">
                                <tr>
                                    <td>
                                        <strong><span>Vuelto</span></strong>
                                    </td>
                                    <td align="right">
                                        <span t-esc="'S/ ' + '{0:.2f}'.format(abs(total_change))"/>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>
            </xpath>
        </template>

    </data>
</odoo>
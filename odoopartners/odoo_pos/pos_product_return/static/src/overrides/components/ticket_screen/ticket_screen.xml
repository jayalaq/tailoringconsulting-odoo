<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_product_return.TicketScreen" t-inherit="point_of_sale.TicketScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('header-row')]/div[4]" position="before">
            <div class="col wide p-2">Document Type</div>
            <div class="col wide p-2">Invoice Number</div>
        </xpath>
        <xpath expr="//div[hasclass('order-row')]/div[4]" position="before">
            <div class="col wide p-2">
                <div>
                    <t t-esc="order.account_move_rel_document_type"></t>
                </div>
            </div>
            <div class="col wide p-2">
                <div>
                    <t t-esc="order.account_move_rel_name"></t>
                </div>
            </div>
        </xpath>
    </t>

</templates>

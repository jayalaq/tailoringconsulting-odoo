<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view_inherit_pos_multi_uom_product_right" model="ir.ui.view">
        <field name="name">product.template.form.view.inherit.pos_multi_uom_product_right</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="point_of_sale.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='pos']" position="after">
                <group name="POSUOM" string="Point of sale UOM" invisible="not available_in_pos">
                    <field name="uom_category_id" invisible="1"/>
                    <field name='has_multi_uom'/>
                    <field name='show_all_uom'/>
                    <field name="allow_uoms" widget="many2many_tags" domain="[('category_id', '=', uom_category_id)]" invisible="show_all_uom"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>

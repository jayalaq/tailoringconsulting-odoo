<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_kitchen_receipt_without_iot.KitchenOrderChangeReceipt">
        <div class="pos-kitchen-receipt">
            <div class="pos-kitchen-receipt-header">
                <div class="pos-kitchen-receipt-order-number"><t t-esc="changes.name"/></div>
                <div class="pos-kitchen-receipt-datetime">
                    DATE: <t t-esc="changes.date"/> <t t-esc="changes.time.hours"/>:<t t-esc="changes.time.minutes"/>:<t t-esc="changes.time.seconds"/>
                </div>
            </div>
            <t t-if="changes.floor_name || changes.table_name">
                <div class="pos-kitchen-receipt-location">
                    <div t-if="changes.table_name" class="pos-kitchen-receipt-table">
                        <b>TABLE:</b> <t t-esc="changes.table_name"/>
                    </div>
                    <div t-if="changes.floor_name" class="pos-kitchen-receipt-floor">
                        <b>FLOOR:</b> <t t-esc="changes.floor_name"/>
                    </div>
                </div>
            </t>
            <t t-if="changes.cashier_name">
                <div class="pos-kitchen-receipt-cashier">
                    <b>CASHIER:</b> <t t-esc="changes.cashier_name"/>
                </div>
            </t>
            <t t-if="changes.cancelled.length > 0">
                <div class="pos-kitchen-receipt-cancel">
                    <div class="pos-kitchen-receipt-title">
                        CANCELLED
                    </div>
                    <br/>
                    <table class="pos-kitchen-receipt-table-detail">
                        <thead>
                            <tr>
                                <th class="pos-kitchen-receipt-table-product">PRODUCT</th>
                                <th class="pos-kitchen-receipt-table-quantity">UNITS</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="changes.cancelled" t-as="change" t-key="change_index">
                                <tr>
                                    <td class="pos-kitchen-receipt-product-name"><t t-esc="change.name"/></td>
                                    <td class="pos-kitchen-receipt-product-quantity"><t t-esc="change.quantity"/></td>
                                </tr>
                                <t t-if="change.note">
                                    <tr class="pos-kitchen-receipt-product-note">
                                        <td colspan="2">
                                            <strong>NOTE:</strong> <t t-esc="change.note"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
            <t t-if="changes.new.length > 0">
                <div class="pos-kitchen-receipt-new">
                    <div class="pos-kitchen-receipt-title">
                        NEW
                    </div>
                    <br/>
                    <table class="pos-kitchen-receipt-table-detail">
                        <thead>
                            <tr>
                                <th class="pos-kitchen-receipt-table-product">PRODUCT</th>
                                <th class="pos-kitchen-receipt-table-quantity">UNITS</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="changes.new" t-as="change" t-key="change_index">
                                <tr>
                                    <td class="pos-kitchen-receipt-product-name"><t t-esc="change.name"/></td>
                                    <td class="pos-kitchen-receipt-product-quantity"><t t-esc="change.quantity"/></td>
                                </tr>
                                <t t-if="change.note">
                                    <tr class="pos-kitchen-receipt-product-note">
                                        <td colspan="2">
                                            <strong>NOTE:</strong> <t t-esc="change.note"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </div>
    </t>

</templates>

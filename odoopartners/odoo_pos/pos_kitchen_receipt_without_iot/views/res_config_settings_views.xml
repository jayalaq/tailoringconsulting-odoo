<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_form_view_inherit_pos_kitchen_receipt_without_iot" model="ir.ui.view">
        <field name="name">res.config.settings.form.view.inherit.pos_kitchen_receipt_without_iot</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="pos_restaurant.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='iface_splitbill']" position="after">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name='pos_allow_kitchens_receipt'/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pos_allow_kitchens_receipt"/>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box" invisible="not pos_allow_kitchens_receipt">
                    <div class="o_setting_left_pane">
                        <field name='pos_use_multi_printer'/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pos_use_multi_printer"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

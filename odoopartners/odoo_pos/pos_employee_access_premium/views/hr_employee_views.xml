<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_employee_view_form_inherit_pos_employee_access_premium" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit.pos_employee_access_premium</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='identification_group']" position="after">
                <group string="Accesses Point of Sale" groups="hr.group_hr_user" name="pos_employee_access_group">
                    <field name="pos_access_close" string="Close POS"/>
                    <field name="pos_access_make_payments" string="Make Payments"/>
                    <field name="pos_access_make_refunds" string="Make Refunds"/>
                    <field name="pos_access_make_discounts" string="Make Discounts"/>
                    <field name="pos_access_change_price" string="Change Price"/>
                    <field name="pos_access_delete_orders" string="Delete Orders"/>
                    <field name="pos_access_delete_order_lines" string="Delete Order Lines"/>
                    <field name="pos_access_decrease_quantity_order_lines" string="Decrease Quantity Order Lines"/>
                    <field name="pos_access_cash_in_out" string="Cash In/Out"/>
                    <field name="pos_access_product_information" string="Product Information"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>

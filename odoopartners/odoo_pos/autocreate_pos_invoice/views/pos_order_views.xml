<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pos_order_view_form_inherit_autocreate_pos_invoice" model="ir.ui.view">
        <field name="name">pos.order.view.form.inherit.autocreate_pos_invoice</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='extra']//group" position="inside">
                <group string="Invoice" name="invoice">
                    <field name="l10n_latam_journal_id" readonly="state != 'draft'"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>

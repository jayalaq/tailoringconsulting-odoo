<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="select_invoice_format_pos.ReceiptScreen" t-inherit="point_of_sale.ReceiptScreen" t-inherit-mode="extension">
        <xpath expr="//button[@t-on-click='printReceipt']" position="after">
            <button class="button print btn btn-lg btn-secondary w-100 py-3 mt-3" t-on-click="printElectronicReceipt">
                <i class="fa fa-print ms-2" t-ref="order-print-electronic-receipt-button"></i> Electronic Receipt
            </button>
        </xpath>
    </t>

</templates>

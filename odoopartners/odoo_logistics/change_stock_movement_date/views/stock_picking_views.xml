<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="stock_picking_view_form_inherit_change_stock_movement_date" model="ir.ui.view">
        <field name="name">stock.picking.view.form.inherit.change_stock_movement_date</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group//group//field[@name='date_done']" position="attributes">
                <attribute name="readonly">state == 'done'</attribute>
                <attribute name="invisible">0</attribute>
            </xpath>
        </field>
    </record>

</odoo>

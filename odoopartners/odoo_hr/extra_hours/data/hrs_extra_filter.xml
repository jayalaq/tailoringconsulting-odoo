<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <data>
        <record id="filter_extra_hours" model="ir.filters">
            <field name="name">Horas extras</field>
            <field name="model_id">account.analytic.line</field>
            <field name="domain">[("extra_hours", "=", True)]</field>
            <field name="user_id" eval="False"/>
            <field name="context">{'group_by': []}</field>
        </record>

        <record id="filter_non_extra_hours" model="ir.filters">
            <field name="name">Sin Horas Extras</field>
            <field name="model_id">account.analytic.line</field>
            <field name="domain">[("extra_hours", "=", False)]</field>
            <field name="user_id" eval="False"/>
            <field name="context">{'group_by': []}</field>
        </record>

        <record id="filter_non_validated_extra_hours" model="ir.filters">
            <field name="name">Horas Extras sin validar</field>
            <field name="model_id">account.analytic.line</field>
            <field name="domain">[("is_validate_extra_hour", "=", False)]</field>
            <field name="user_id" eval="False"/>
            <field name="context">{'group_by': []}</field>
        </record>

        <record id="filter_validated_extra_hours" model="ir.filters">
            <field name="name">Horas Extras validadas</field>
            <field name="model_id">account.analytic.line</field>
            <field name="domain">[("is_validate_extra_hour", "!=", False)]</field>
            <field name="user_id" eval="False"/>
            <field name="context">{'group_by': []}</field>
        </record>
    </data>
    
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="ple_report_sale_view_tree" model="ir.ui.view">
        <field name="name">ple.report.sale.view.tree</field>
        <field name="model">ple.report.sale</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="company_id"/>
                <field name="date_ple"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="ple_report_sale_view_form" model="ir.ui.view">
        <field name="name">ple.report.sale.view.form</field>
        <field name="model">ple.report.sale</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_excel" string="Generar Reporte" type="object" invisible="state in ('load', 'closed')"/>
                    <button name="action_close" string="Declarar a SUNAT" invisible="state in ('draft', 'closed')" type="object"/>
                    <button name="action_rollback" string="Regresar a Borrador" invisible="state == 'draft'" type="object"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="company_id"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="state_send"/>
                            <field name="date_ple"/>
                        </group>
                        <group string="Reportes PLE" id="ple_sale">
                            <field name="xls_filename" invisible="1"/>
                            <field name="xls_binary" filename="xls_filename" readonly="1"/>
                            <field name="txt_filename" invisible="1"/>
                            <field name="txt_binary" filename="txt_filename" readonly="1"/>
                        </group>
                    </group>
                    <field name="error_dialog" class="errorbox" invisible = "error_dialog == False"/>
                    <notebook>
                        <page string="Comprobantes" invisible="1">
                            <field name="move_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ple_report_inv_bal_0324_view_form" model="ir.ui.view">
        <field name="name">ple.report.inv.bal.24.view.form</field>
        <field name="model">ple.report.inv.bal.24</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_excel" string="Generar Reporte" type="object" invisible="state != 'draft'"/>
                    <button name="action_close" string="Declarar a SUNAT" type="object" invisible="state != 'load'"/>
                    <button name="action_rollback" string="Regresar a Borrador" type="object" invisible="state not in ['load','closed']"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="company_id"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="state_send"/>
                            <field name="date_ple"/>
                            <field name="financial_statements_catalog"/>
                            <field name="eeff_presentation_opportunity"/>
                        </group>
                        <group string="Reportes" name="ple_inv_bal_324">
                            <field name="xls_filename" invisible="1"/>
                            <label string="Reporte Excel" for="xls_binary"/>
                            <field name="xls_binary" filename="xls_filename" readonly="1" nolabel="1"/>
                            <field name="txt_filename" invisible="1"/>
                            <label string="Reporte .TXT 3.24" for="txt_binary"/>
                            <field name="txt_binary" filename="txt_filename" readonly="1" nolabel="1"/>
                            <field name="pdf_filename" invisible="1"/>
                            <label string="Reporte .PDF 3.24" for="pdf_binary"/>
                            <field name="pdf_binary" filename="pdf_filename" readonly="1" nolabel="1"/>
                        </group>
                    </group>
                    <field name="error_dialog" class="errorbox" invisible="error_dialog == False"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ple_report_inv_bal_0324_view_tree" model="ir.ui.view">
        <field name="name">ple.report.inv.bal.24.view.tree</field>
        <field name="model">ple.report.inv.bal.24</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="company_id"/>
                <field name="date_ple"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

</odoo>
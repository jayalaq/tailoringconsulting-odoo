<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="l10n_latam_identification_type_view_form" model="ir.ui.view">
        <field name="name">l10n.latam.identification.type.view.form</field>
        <field name="model">l10n_latam.identification.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="is_vat"/>
                        </group>
                        <group>
                            <field name="country_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="doc_length"/>
                            <field name="exact_length"/>
                        </group>
                        <group>
                            <field name="doc_type"/>
                            <field name="nationality"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="l10n_latam_identification_type_view_tree_inherit_document_type_validation" model="ir.ui.view">
        <field name="name">l10n.latam.identification.type.view.tree.inherit.document_type_validation</field>
        <field name="model">l10n_latam.identification.type</field>
        <field name="inherit_id" ref="l10n_latam_base.view_l10n_latam_identification_type_tree"/>
        <field name="arch" type="xml">
            <xpath expr="/tree" position="attributes">
                <attribute name="create">1</attribute>
                <attribute name="edit">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="l10n_latam_base.action_l10n_latam_identification_type" model="ir.actions.act_window">
        <field name="view_mode">tree,form</field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_partner_concept_view_form" model="ir.ui.view">
        <field name="name">hr.partner.concept.view.form</field>
        <field name="model">hr.partner.concept</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="salary_rule_id"/>
                            <field name="is_debit"/>
                            <field name="amount"/>
                            <field name="is_active"/>
                            <field name="end_date" />
                        </group>
                        <group>
                            <field name="partner_id"/>
                            <field name="is_credit"/>
                            <field name="percentage"/>
                            <field name="start_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_partner_concept_view_tree" model="ir.ui.view">
        <field name="name">hr.partner.concept.view.tree</field>
        <field name="model">hr.partner.concept</field>
        <field name="arch" type="xml">
            <tree>
                <field name="salary_rule_id"/>
                <field name="partner_id"/>
                <field name="is_debit"/>
                <field name="is_credit"/>
                <field name="amount"/>
                <field name="percentage"/>
                <field name="is_active"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>

    <record id="hr_partner_concept_action" model="ir.actions.act_window">
        <field name="name">Conceptos Salariales</field>
        <field name="res_model">hr.partner.concept</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea un nuevo concepto salarial
            </p>
        </field>
    </record>

</odoo>

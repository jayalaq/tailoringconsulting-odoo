<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_loan_tree_view" model="ir.ui.view">
        <field name="name">hr.loan.tree.view</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Loan"/>
                <field name="employee_id"/>
                <field name="loan_amount"/>
                <field name="total_paid_amount"/>
                <field name="balance_amount"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="hr_loan_line_tree_view" model="ir.ui.view">
        <field name="name">hr.loan.line.tree.view</field>
        <field name="model">hr.loan.line</field>
        <field name="arch" type="xml">
            <tree default_order="date desc">
                <field name="id"/>
                <field name="date"/>
                <field name="loan_id" string="Loan"/>
                <field name="employee_id"/>
                <field name="payslip_id"/>
                <field name="amount"/>
                <field name="payment"/>
                <field name="receivable"/>
                <field name="paid"/>
            </tree>
        </field>
    </record>

    <record id="hr_loan_form_view" model="ir.ui.view" >
        <field name="name">hr.loan.form.view</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_approve" type="object" string="Approve" invisible="state != 'waiting_approval_1'" class="oe_highlight"
                            groups="hr.group_hr_manager,hr.group_hr_user"/>
                    <button name="action_submit" type="object" string="Submit" invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_draft" type="object" string="Draft" invisible="state not in ('waiting_approval_1', 'refuse', 'cancel')"
                            groups="hr.group_hr_manager,hr.group_hr_user"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state not in ('approve', 'draft', 'waiting_approval_1')"/>
                    <button name="action_refuse" type="object" string="Refuse" invisible="state not in ('approve', 'waiting_approval_1', 'waiting_approval_2', 'cancel')"
                            groups="hr.group_hr_manager,hr.group_hr_user"/>
                    <button name="action_payment_anticipated" type="object" string="Pago anticipado" invisible="state != 'approve'" class="oe_highlight"
                            groups="hr.group_hr_manager,hr.group_hr_user"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,waiting_approval_1,approve,paid"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group col="4">
                        <field name="employee_id" readonly="state == 'approve'" />
                        <field name="date"/>
                        <field name="department_id"/>
                        <field name="job_position"/>
                        <field name="contract_id"/>
                        <field name="loan_amount" readonly="state == 'approve'" />
                        <field name="installment" readonly="state == 'approve'" />
                        <field name="payment_date" readonly="state == 'approve'" />
                        <field name="emp_account_id" invisible="state == 'draft'" />
                        <field name="treasury_account_id" invisible="state == 'draft'"/>
                        <field name="journal_id" invisible="state == 'draft'" />
                        <field name="company_id" options="{'no_create': True}" readonly="state != 'draft'" groups="base.group_multi_company"/>
                        <field name="currency_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                        <field name="loan_type" readonly="state == 'approve'" />
                        <field name="move_id"/>

                    </group>
                    <notebook>
                        <page string="Installments">
                            <field name="loan_lines" readonly="state == 'approve'" context="{'default_employee_id': employee_id}">
                                <tree string="Installments" editable="bottom">
                                    <field name="struct_id"/>
                                    <field name="employee_id" column_invisible="True"/>
                                    <field name="date"/>
                                    <field name="amount"/>
                                    <field name="payment"/>
                                    <field name="receivable"/>
                                    <field name="payslip_id" optional="hide" column_invisible="False" invisible="False" readonly="True"/>
                                    <field name="paid" readonly="0" optional="hide"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2">
                                <field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="total_paid_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="balance_amount" class="oe_subtotal_footer_separator" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <button type="object" name="compute_installment" string="Compute Installment" colspan="2"
                                    invisible="state == 'approve'"
                                    groups="hr.group_hr_manager,hr.group_hr_user" class="oe_stat_button"
                                    icon="fa-clock-o"/>
                            <div class="oe_clear"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="hr_loan_search_view" model="ir.ui.view">
        <field name="name">hr.loan.search.view</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <search string="Loan">
                <filter string="My Loans" name="myloan" domain="[('employee_id.user_id.id', '=', uid)]"/>
                <field name="employee_id" string="Employee"/>
                <field name="department_id" string="Department"/>
                <filter string="Employee" name="employee_id" context="{'group_by':'employee_id'}"/>
                <filter string="Department" name="department_id" context="{'group_by':'department_id'}"/>
                <filter string="Status" name="status" context="{'group_by':'state'}"/>
            </search>
        </field>
    </record>

    <record id="hr_loan_line_search_view" model="ir.ui.view">
        <field name="name">hr.loan.line.search.view</field>
        <field name="model">hr.loan.line</field>
        <field name="arch" type="xml">
            <search string="Loan line">
                <field name="loan_id" string="Loan"/>
                <field name="id" string="Id Loan Line (Identification)"/>
                <field name="employee_id" string="Employee"/>
                <field name="payslip_id" string="Payslip"/>
                <field name="struct_id" string="Salary Structure"/>
                <filter string="Employee" name="employee_id" context="{'group_by':'employee_id'}"/>
                <filter string="Paid" name="paid" context="{'group_by':'paid'}"/>
                <filter string="Loan" name="loan_id" context="{'group_by':'loan_id'}"/>
            </search>
        </field>
    </record>

    <record id="action_hr_loan" model="ir.actions.act_window">
        <field name="name">Loan Requests</field>
        <field name="res_model">hr.loan</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_myloan': 1}</field>
        <field name="search_view_id" ref="hr_loan_search_view"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Loan request.
            </p>
            <p>
                Use this menu to create loan requests.
            </p>
        </field>
    </record>

    <record id="action_hr_loan_line" model="ir.actions.act_window">
        <field name="name">Loan Requests Line</field>
        <field name="res_model">hr.loan.line</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="hr_loan_line_search_view"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Don't create a new Loan request line.
            </p>
            <p>
                Don't Use this menu to create loan requests.
            </p>
        </field>
    </record>

    <record id="hr_loan_line_view_form" model="ir.ui.view">
        <field name="name">hr.loan.line.view.form</field>
        <field name="model">hr.loan.line</field>
        <field name="arch" type="xml">
            <form string="Deudas">
                <sheet>
                    <group>
                        <group>
                            <field name="loan_id" readonly="1"/>
                            <field name="employee_id" readonly="1"/>
                            <field name="struct_id" readonly="1"/>
                            <field name="payslip_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="date" readonly="1"/>
                            <field name="paid" readonly="payslip_id != False"/>
                            <field name="amount" readonly="1"/>
                            <field name="payment" readonly="payslip_id != False"/>
                            <field name="receivable" readonly="payslip_id != False"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_loan_line_view_form" model="ir.actions.act_window">
        <field name="name">Deudas</field>
        <field name="res_model">hr.loan.line</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="hr_loan_line_view_form"/>
    </record>

    <menuitem name="Loans And Salary Advance" 
              id="menu_hr_loans_and_advances"
              parent="hr.menu_hr_root"
              sequence="20"/>

    <menuitem name="Loan Requests"
              id="menu_base_hr_loan"
              parent="menu_hr_loans_and_advances"
              sequence="1"/>

    <menuitem name="Loan Requests"
              parent="menu_base_hr_loan"
              id="menu_hr_loan"
              action="action_hr_loan"/>

    <menuitem name="Loans and advances lines"
              id="menu_base_hr_loans_and_advances_lines"
              parent="hr_work_entry_contract_enterprise.menu_hr_payroll_configuration"
              sequence="90"/>

    <menuitem name="Loan Requests Lines"
              parent="menu_base_hr_loans_and_advances_lines"
              id="menu_hr_loan_lines"
              sequence="10"
              action="action_hr_loan_line"/>

</odoo>
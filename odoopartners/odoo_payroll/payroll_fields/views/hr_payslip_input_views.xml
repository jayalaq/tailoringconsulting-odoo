<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_payslip_input_view_tree" model="ir.ui.view">
        <field name="name">hr.payslip.input.view.tree</field>
        <field name="model">hr.payslip.input</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="struct_id" column_invisible="1"/>
                <field name="date_from" readonly="state not in [False, 'draft','verify']"/>
                <field name="date_to" readonly="state not in [False, 'draft','verify']"/>
                <field name="date_start_dt"/>
                <field name="date_start" column_invisible="1"/>
                <field name="employee_id" readonly="state not in [False, 'draft','verify']"/>
                <field name="name" readonly="state not in [False, 'draft','verify']"/>
                <field name="input_type_id" optional="hidden"/>
                <field name="_allowed_input_type_ids" column_invisible="1"/>
                <field name="code" readonly="state not in [False, 'draft','verify']" />
                <field name="amount" readonly="state not in [False, 'draft','verify']"/>
                <field name="payslip_id" readonly="state not in [False, 'draft','verify']"/>
                <field name="state"/>
                <field name="struct_id" column_invisible="1"/>
                <field name="department_id" column_invisible="1"/>
                <field name="disability" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="hr_payslip_input_view_pivot" model="ir.ui.view">
        <field name="name">hr.payslip.input.view.pivot</field>
        <field name="model">hr.payslip.input</field>
        <field name="arch" type="xml">
            <pivot/>
        </field>
    </record>

    <record id="hr_payslip_input_view_filter" model="ir.ui.view">
        <field name="name">hr.payslip.input.view.filter</field>
        <field name="model">hr.payslip.input</field>
        <field name="arch" type="xml">
            <search string="Search Payslips Input">
            <field name="name" string="Nombre"/>
                <field name="name" string="Nombre"/>
                <field name="code" string="CÃ³digo"/>
                <field name="employee_id" string="Empleado"/>
                <field name="department_id" string="Departamento"/>
                <field name="struct_id" string="Estructura"/>
                <filter string="Seis meses anteriores" name="six_month_before" domain="[('id','!=','-1')]"/>
                <separator/>
                <filter string="Este mes" name="current_month" domain="[('date_to','&lt;',(context_today()+relativedelta(months=1)).strftime('%%Y-%%m-01')), ('date_to','&gt;=',time.strftime('%%Y-%%m-01'))]"/>
                <separator/>
                <filter string="Borrador" name="draft" domain="[('state','=','draft')]" help="Draft Input"/>
                <filter string="Hecho" name="done" domain="[('state','=','done')]" help="Done Input"/>
                <separator/>
                <filter string="Discapacidad" name="disability" domain="[('disability','=',True)]"/>
            </search>
        </field>
    </record>

</odoo>

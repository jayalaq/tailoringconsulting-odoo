<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_payslip_worked_days_view_tree" model="ir.ui.view">
        <field name="name">hr.payslip.worked_days.view.tree</field>
        <field name="model">hr.payslip.worked_days</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="date_from" readonly="state not in [False, 'draft']"/>
                <field name="date_to" readonly="state not in [False, 'draft']"/>
                <field name="date_start_dt"/>
                <field name="date_start" column_invisible="1"/>
                <field name="employee_id" readonly="state not in [False, 'draft']" domain="[]"/>
                <field name="contract_id" readonly="state not in [False, 'draft']" domain="[]"/>
                <field name="name" readonly="state not in [False, 'draft']"/>
                <field name="code" readonly="state not in [False, 'draft']"/>
                <field name="number_of_days" readonly="state not in [False, 'draft']"/>
                <field name="number_of_hours" readonly="state not in [False, 'draft']"/>
                <field name="payslip_id" readonly="state not in [False, 'draft','verify']"/>
                <field name="work_entry_type_id" optional="hidden" readonly="state not in [False, 'draft','verify']"/>
                <field name="state" readonly="1"/>
                <field name="department_id" column_invisible="1"/>
                <field name="struct_id" column_invisible="1"/>
                <field name="disability" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="hr_payslip_worked_days_view_pivot" model="ir.ui.view">
        <field name="name">hr.payslip.worked_days.view.pivot</field>
        <field name="model">hr.payslip.worked_days</field>
        <field name="arch" type="xml">
            <pivot/>
        </field>
    </record>

    <record id="hr_payslip_worked_days_view_filter" model="ir.ui.view">
        <field name="name">hr.payslip.worked_days.view.filter</field>
        <field name="model">hr.payslip.worked_days</field>
        <field name="arch" type="xml">
            <search string="Search Payslips worked days">
                <field name="department_id" string="Departamento"/>
                <field name="struct_id" string="Estructura"/>
                <filter string="Seis meses anteriores" name="six_month_before" domain="[('id','!=','-1')]"/>
                <separator/>
                <filter string="Este mes" name="current_month"
                        domain="[('date_to','&lt;',(context_today()+relativedelta(months=1)).strftime('%%Y-%%m-01')), ('date_to','&gt;=',time.strftime('%%Y-%%m-01'))]"/>
                <separator/>
                <filter string="Borrador" name="draft" domain="[('state','=','draft')]" help="Draft worked days"/>
                <filter string="Hecho" name="done" domain="[('state','=','done')]" help="Done worked days"/>
                <separator/>
                <filter string="Discapacidad" name="disability" domain="[('disability','=',True)]"/>
            </search>
        </field>
    </record>
</odoo>

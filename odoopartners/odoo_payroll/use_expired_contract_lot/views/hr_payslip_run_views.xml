<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_payslip_run_view_form_inherit_use_expired_contract_lot" model="ir.ui.view">
        <field name="name">hr.payslip.run.view.form.inherit.use_expired_contract_lot</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]" position="after">
                <group>
                    <field name="use_expired_contract"/>
                </group>
                <group invisible = "use_expired_contract == False">
                    <label for="date_start_contract" string="Periodo de Contratos"/>
                    <div class="o_row">
                        <field name="date_start_contract" class="oe_inline o_hr_narrow_field"/> - <field name="date_end_contract" class="oe_inline o_hr_narrow_field"/>
                    </div>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
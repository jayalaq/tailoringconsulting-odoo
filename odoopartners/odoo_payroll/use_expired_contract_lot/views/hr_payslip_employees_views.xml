<?xml version="1.0" encoding="utf-8"?>
<odoo> 
    <!-- Herencia de la vista original -->
    <record id="view_hr_payslip_by_employees_inherit_use_expired_contract_lot" model="ir.ui.view">
        <field name="name">hr.payslip.by.employees.inherit.use_expired_contract_lot</field>
        <field name="model">hr.payslip.employees</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_by_employees"/>
        <field name="arch" type="xml">
            <!-- Reemplazar el campo employee_ids -->
            <xpath expr="//field[@name='employee_ids']" position="replace">
                <field name="employee_ids" nolabel="1" domain="[('resource_id.active', '=', False)]">
                    <tree>
                        <field name="name"/>
                        <field name="work_email"/>
                        <field name="department_id"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_view_form_inherit_eps_process" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit.eps_process</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='health_regime_id']" position="after">
                <field name="exists_eps"/>
                <field name="management_eps" invisible="exists_eps != True"/>
            </xpath>
      </field>

    </record>
</odoo>
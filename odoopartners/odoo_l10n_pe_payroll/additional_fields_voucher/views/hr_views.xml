<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_employee_view_form_inherit_additional_fields_voucher" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit.additional_fields_voucher</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hr_settings']/group/group/field[@name='user_id']" position="after">
                <field name="l10n_pe_microenterprise_manager"/>
                <field name="is_employer"/>
                <div>
                    <field name="employer_sign" widget="image"
                           required= "is_employer != False"
                           invisible = "is_employer == False"
                           class="oe_avatar"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="hr_payroll_structure_view_form_inherit_additional_fields_voucher" model="ir.ui.view">
        <field name="name">hr.payroll.structure.view.form.inherit.additional_fields_voucher</field>
        <field name="model">hr.payroll.structure</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_employee_grade_form"/>
        <field name="arch" type="xml">
            <field name="country_id" position="after">
                <field name="law"/>
            </field>
        </field>
    </record>

</odoo>

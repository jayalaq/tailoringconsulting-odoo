<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <record id="hr_payroll_structure_type_view_tree_inherit_payment_condition" model="ir.ui.view">
        <field name="name">hr.payroll.structure.type.view.tree.inherit_payment_condition</field>
        <field name="model">hr.payroll.structure.type</field>
        <field name="inherit_id" ref="hr_payroll.hr_payroll_structure_type_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_schedule_pay']" position="before">
                <field name="default_schedule_pay_conditions"/>
            </xpath>
            <xpath expr="//field[@name='default_schedule_pay']" position="attributes">
                    <attribute name="column_invisible">1</attribute>
                </xpath>
        </field>
    </record>    

    <record id="hr_payroll_structure_type_view_form_inherit_payment_condition" model="ir.ui.view">
        <field name="name">hr.payroll.structure.type.view.form.inherit_payment_condition</field>
        <field name="model">hr.payroll.structure.type</field>
        <field name="inherit_id" ref="hr_payroll.hr_payroll_structure_type_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_schedule_pay']" position="before">
                <field name="default_schedule_pay_conditions"/>
            </xpath>
            <xpath expr="//field[@name='default_schedule_pay']" position="attributes">
                    <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
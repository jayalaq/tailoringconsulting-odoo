<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <record id="hr_payroll_structure_view_form_inherit_payment_condition" model="ir.ui.view">
        <field name="name">hr.payroll.structure.view.form.inherit_payment_condition</field>
        <field name="model">hr.payroll.structure</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_employee_grade_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='schedule_pay']" position="before">
                <field name="schedule_pay_conditions"/>
            </xpath>
            <xpath expr="//field[@name='schedule_pay']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
        </field>
    </record>  

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_leave_view_search_inherit_filter_utilities" model="ir.ui.view">
        <field name="name">hr.leave.view.search.inherit.filter_utilities</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.view_hr_holidays_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='approve']" position="before">
                <separator/>
                <filter string="Utilidades" name="utilities_filter"
                        domain="['|', '|',('utilities','=', True),('holiday_status_id', '=', False),('code_holiday', 'in', ['WORK100', 'GLOBAL', 'DDO'])]"/>
            </xpath>
        </field>
    </record>

    <record id="hr_leave_view_tree_inherit_filter_utilities" model="ir.ui.view">
        <field name="name">hr.leave.view.tree.inherit.filter_utilities</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_tree"/>
        <field name="arch" type="xml">
            <field name="message_needaction" position="after">
                <field name="utilities" column_invisible="1"/>
            </field>
        </field>
    </record>

</odoo>

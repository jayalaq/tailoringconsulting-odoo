<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="hr_attendance_view_search_inherit_filter_utilities" model="ir.ui.view">
        <field name="name">hr.attendance.view.search.inherit.filter_utilities</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter" position="after">
                <separator/>
                <filter string="Utilidades" name="utilities_filter" domain="['|', ('utilities','=', True),('holiday_status_id', '=', False)]"/>
            </xpath>
        </field>
    </record>

    <record id="hr_attendance_view_tree_inherit_filter_utilities" model="ir.ui.view">
        <field name="name">hr.attendance.view.tree.inherit.filter_utilities</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="absence_manager.hr_attendance_view_tree_inherit_absence_manager"/>
        <field name="arch" type="xml">
            <field name="holiday_status_id" position="after">
                <field name="utilities" column_invisible="1"/>
            </field>
        </field>
    </record>
    
</odoo>
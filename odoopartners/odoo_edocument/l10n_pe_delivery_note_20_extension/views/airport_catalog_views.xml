<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="airport_catalog_view_tree" model="ir.ui.view">
        <field name="name">airport.catalog.view.tree</field>
        <field name="model">airport.catalog</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="ubigeo"/>
                <field name="department"/>
                <field name="province"/>
                <field name="district"/>
                <field name="address"/>
                <field name="type"/>
                <field name="annexed_establishment"/>
            </tree>
        </field>
    </record>

    <record id="airport_catalog_view_form" model="ir.ui.view">
        <field name="name">airport.catalog.view.form</field>
        <field name="model">airport.catalog</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="ubigeo"/>
                            <field name="department"/>
                        </group>
                        <group>
                            <field name="province"/>
                            <field name="district"/>
                            <field name="address"/>
                            <field name="type"/>
                            <field name="annexed_establishment"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="airport_catalog_action" model="ir.actions.act_window">
        <field name="name">Aeropuertos</field>
        <field name="res_model">airport.catalog</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_airport_catalog" name="Aeropuertos" action="airport_catalog_action" parent="menu_electronic_guide" sequence="2"/>

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view_inherit_l10n_pe_advance_global_discount_product" model="ir.ui.view">
        <field name="name">product.template.form.view.inherit.l10n_pe_advance_global_discount</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="before">
                <field name="l10n_pe_advance"/>
            </field>
        </field>
    </record>

    <record id="product_template_form_view_inherit_l10n_pe_advance_global_discount_l10n_pe_catalog" model="ir.ui.view">
        <field name="name">product.template.form.view.inherit.l10n_pe_advance_global_discount</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="l10n_pe_catalog.product_template_form_view_inherit_l10n_pe_catalog"/>
        <field name="arch" type="xml">
            <field name="l10n_pe_charge_discount_id" position="replace">
                <field name="l10n_pe_charge_discount_id" required="global_discount"/>
            </field>
        </field>
    </record>

</odoo>

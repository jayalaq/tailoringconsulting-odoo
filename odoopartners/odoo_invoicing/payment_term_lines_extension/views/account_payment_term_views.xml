<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="account_payment_term_view_form_inherit_payment_term_lines_extension" model="ir.ui.view">
        <field name="name">account.payment.term.view.form.inherit.payment_term_lines_extension</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree" position="replace" >
                <tree string="Payment Terms">
                    <field name="value" string="Due Type"/>
                    <field name="value_amount" invisible="value == 'balance'" digits="[2, 2]"/>
                    <field name="nb_days"/>
                    <field name="delay_type"/>
                </tree>
            </xpath>
        </field>
    </record>

</odoo>

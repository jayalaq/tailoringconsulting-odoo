<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_massive_payment_collections_form" model="ir.ui.view">
            <field name="name">massive.payment.collections.form</field>
            <field name="model">massive.payment.collections</field>
            <field name="arch" type="xml">
                <form string="Register Payment/Collection">

                    <field name="line_ids" invisible="1"/>
                    <field name="can_edit_wizard" invisible="1" force_save="1"/>
                    <field name="can_group_payments" invisible="1" force_save="1"/>
                    <field name="payment_type" invisible="1" force_save="1"/>
                    <field name="partner_type" invisible="1" force_save="1"/>
                    <field name="source_amount" invisible="1" force_save="1"/>
                    <field name="source_amount_currency" invisible="1" force_save="1"/>
                    <field name="source_currency_id" invisible="1" force_save="1"/>
                    <field name="company_id" invisible="1" force_save="1"/>
                    <field name="partner_id" invisible="1" force_save="1"/>
                    <field name="country_code" invisible="1" force_save="1"/>

                    <field name="show_partner_bank_account" invisible="1"/>
                    <field name="require_partner_bank_account" invisible="1"/>
                    <field name="available_journal_ids" invisible="1"/>
                    <field name="hide_payment_method_line" invisible="1"/>
                    <field name="available_payment_method_line_ids" invisible="1"/>
                    <field name="available_partner_bank_ids" invisible="1"/>
                    <field name="company_currency_id" invisible="1"/>
                    <field name="to_force_exchange_rate" invisible="1"/>
                    <group>
                        <group name="group1">
                            <field name="journal_id" options="{'no_open': True, 'no_create': True}" required="1"/>
                            <field name="payment_method_line_id"
                                   required="1" options="{'no_create': True, 'no_open': True}"/>
                            <field name="partner_bank_id"
                                    invisible="show_partner_bank_account == False or can_edit_wizard == False or can_group_payments == True and group_payment == False"
                                    required="require_partner_bank_account == True and can_edit_wizard == True or can_group_payments == False or group_payment == False" />
                            <field name="group_payment" invisible="can_group_payments == False"/>
                        </group>
                        <group name="group2">
                            <label for="amount"
                                    invisible="can_edit_wizard == False or can_group_payments == True and group_payment == False"/>
                            <div name="amount_div" class="o_row"
                                invisible="can_edit_wizard == False or can_group_payments == True and group_payment == False">
                                <field name="amount"/>
                                <field name="currency_id"
                                       required="1"
                                       options="{'no_create': True, 'no_open': True}"
                                       groups="base.group_multi_currency"/>
                            </div>
                            <field name="payment_date"/>
                            <field name="communication"/>
                        </group>
                        <group name="group3"
                                invisible="payment_difference == 0.0 or can_edit_wizard == False or can_group_payments == True and group_payment == False">
                            <label for="payment_difference"/>
                            <div>
                                <field name="payment_difference"/>
                                <field name="payment_difference_handling" widget="radio" nolabel="1"/>
                                <div invisible="payment_difference_handling == 'open'">
                                    <label for="writeoff_account_id" string="Post Difference In" class="oe_edit_only"/>
                                    <field name="writeoff_account_id"
                                           string="Post Difference In"
                                           options="{'no_create': True}"
                                           required="payment_difference_handling == 'reconcile'"/>
                                    <label for="writeoff_label" class="oe_edit_only" string="Label"/>
                                    <field name="writeoff_label"
                                            required="payment_difference_handling == 'reconcile'"/>
                                </div>
                            </div>
                        </group>
                    </group>
                    <footer>
                        <button string="Create Payment" name="action_create_payments" type="object" class="oe_highlight"
                                data-hotkey="q"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_massive_payment_collections" model="ir.actions.act_window">
            <field name="name">Register Payment/Collection</field>
            <field name="groups_id" eval="[(4, ref('account.group_account_user'))]"/>
            <field name="res_model">massive.payment.collections</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_massive_payment_collections_form"/>
            <field name="target">new</field>
            <field name="binding_model_id" ref="account.model_account_move_line"/>
            <field name="binding_view_types">list</field>
        </record>

    </data>
</odoo>
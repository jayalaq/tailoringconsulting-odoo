<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="account_move_view_form_inherit_invoice_type_document" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit.invoice_type_document</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']//tree/field[@name='account_id']" position="after">
                <field name="serie_correlative_is_readonly" column_invisible="1"/>
                <field name="l10n_latam_document_type_id" 
                    readonly="serie_correlative_is_readonly == True"
                    optional="hide"/>
                <field name="serie_correlative" 
                    readonly="serie_correlative_is_readonly == True"
                    optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']//tree/field[@name='name']" position="before">
                <field name="serie_correlative_is_readonly" column_invisible="1"/>
                <field name="move_type" column_invisible="1"/>
                <field name="l10n_latam_document_type_id" 
                    required="move_type != 'entry'"
                    readonly="serie_correlative_is_readonly == True"
                    optional="hide"/>
                <field name="serie_correlative" 
                    readonly="serie_correlative_is_readonly == True"
                    optional="hide"/>
            </xpath>
        </field>
    </record>

</odoo>
